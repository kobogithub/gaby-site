<!-- src/components/sections/courses/courses.astro -->
---
import Box from "@/components/box/index.astro";
import BoxHeader from "@/components/box/header.astro";
import BoxTitle from "@/components/box/title.astro";
import BoxContent from "@/components/box/content.astro";
import { COURSES } from "@/lib/constants/courses";
import CourseItem from "./course-item.astro";
---
<Box>
  <BoxHeader>
    <BoxTitle> Cursos y Certificaciones </BoxTitle>
  </BoxHeader>
  <BoxContent className="px-0">
    {
      COURSES.map(course => {
        return <CourseItem course={course} />;
      })
    }
  </BoxContent>
</Box>