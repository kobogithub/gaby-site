<!-- src/components/sections/courses/course-item.astro -->
---
interface Props {
  course: {
    name: string;
    location: string;
    date: string;
  };
}
const { course } = Astro.props;
---
<div class="space-y-2 p-4 border-b last:border-b-0">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold">
      {course.name}
    </h3>
    <span class="text-sm text-foreground/70">
      {course.date}
    </span>
  </div>
  <p class="text-sm text-foreground/70">{course.location}</p>
</div>