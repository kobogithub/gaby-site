<!-- src/components/sections/services/service-item.astro -->
---
interface Props {
  service: {
    category: string;
    items: string[];
  };
}
const { service } = Astro.props;
---
<div class="space-y-3 p-4 border-b last:border-b-0">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold">
      {service.category}
    </h3>
    <div class="text-sm text-foreground/70 flex items-center gap-2">
      <span class="px-2 py-1 text-xs rounded-full bg-primary/10 text-primary font-medium">
        {service.items.length} servicios
      </span>
    </div>
  </div>
  <ul class="text-sm text-foreground/70 space-y-1 list-disc pl-5">
    {service.items.map(item => (
      <li>{item}</li>
    ))}
  </ul>
</div>