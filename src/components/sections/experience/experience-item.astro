---
interface Props {
  experience: {
    date: string;
    company: string;
    subcontractor?: string;
    present: boolean;
    position: string;
    role: string;
  };
}
const { experience } = Astro.props;
---
<div class="space-y-4 p-4 border-b last:border-b-0">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <span class="size-2 rounded-full bg-foreground/60"></span>
      <h3 class="text-xl font-black">
        {experience.company}
        {experience.subcontractor && <span class="text-sm font-normal ml-2">- {experience.subcontractor}</span>}
      </h3>
    </div>
    <div class="text-sm text-foreground/70 flex items-center gap-2">
      {experience.date}
      {experience.present && (
        <span class="px-2 py-1 text-xs rounded-full bg-primary/10 text-primary font-medium">
          Actual
        </span>
      )}
    </div>
  </div>
  <div class="pl-6">
    <h4 class="font-semibold">{experience.position}</h4>
    <p class="text-sm text-foreground/70 mt-1">{experience.role}</p>
  </div>
</div>