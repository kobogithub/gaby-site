<!-- src/components/skills.astro -->
---
import Box from "./box/index.astro";
import BoxHeader from "./box/header.astro";
import BoxTitle from "./box/title.astro";
import BoxContent from "./box/content.astro";
import { SKILLS } from "@/lib/constants/skills";
---

<Box>
  <BoxHeader>
    <BoxTitle>Habilidades</BoxTitle>
  </BoxHeader>
  <BoxContent>
    <div class="grid gap-6 sm:grid-cols-2">
      {SKILLS.map(skill => (
        <div>
          <h3 class="mb-2 font-semibold text-foreground">{skill.category}</h3>
          <ul class="space-y-1">
            {skill.items.map(item => (
              <li class="text-sm text-foreground/70">{item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </BoxContent>
</Box>